import random
import time

# List of commands
commands = [
    "Simon says jump",
    "Simon says touch your nose",
    "Simon says clap your hands",
    "Wave your hand",
    "Spin around",
    "Simon says sit down",
    "Stand up",
]

def simon_says_game(rounds=5):
    score = 0

    print("Welcome to Simon Says! Follow the commands only if 'Simon says' is included.")
    time.sleep(2)

    for _ in range(rounds):
        command = random.choice(commands)  # Pick a random command
        print("\n" + command)  # Display command
        user_input = input("Did you follow the command? (yes/no): ").strip().lower()

        # Check if command is valid
        if command.startswith("Simon says"):
            if user_input == "yes":
                score += 1
                print("✔ Correct!")
            else:
                print("❌ Wrong! You should have followed the command.")
        else:
            if user_input == "no":
                score += 1
                print("✔ Correct!")
            else:
                print("❌ Wrong! You shouldn't have followed the command.")

        time.sleep(1)

    print(f"\nGame Over! Your final score: {score}/{rounds}")

# Run the game
simon_says_game()
